---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const services = [
  {
    title: "Bumper Repairs",
    description: "Expert repairs for damaged bumpers, restoring them to their original condition.",
    icon: "üöó",
    image: "/images/bumper-repair.jpg",
    href: "/services/bumper-repairs"
  },
  {
    title: "Scratch Removal",
    description: "Professional scratch removal services to restore your car's appearance.",
    icon: "‚ú®",
    image: "/images/scratch-removal.jpg",
    href: "/services/scratch-removal"
  },
  {
    title: "Dent Removal",
    description: "Paintless dent removal and traditional dent repair services.",
    icon: "üî®",
    image: "/images/dent-removal.jpg",
    href: "/services/dent-removal"
  },
  {
    title: "Alloy Wheel Repairs",
    description: "Complete wheel restoration and repair services.",
    icon: "‚öôÔ∏è",
    image: "/images/alloy-wheel.jpg",
    href: "/services/alloy-wheel-repairs"
  }
];
---

<Layout 
  title="Our Services" 
  description="Professional mobile car body repair services in Yorkshire - bumper repairs, scratch removal, dent removal, and alloy wheel repairs."
>
  <main>
    <div class="bg-blue-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-4">Our Services</h1>
        <p class="text-xl text-blue-100">Comprehensive mobile car body repair solutions</p>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map(service => (
          <a href={service.href} class="block group">
            <div class="relative overflow-hidden rounded-lg shadow-lg">
              <img 
                src={service.image} 
                alt={service.title}
                class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h2 class="text-2xl font-bold text-white mb-2">{service.title}</h2>
                <p class="text-gray-200">{service.description}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>